<com.mobium.reference.views.SquareCardView
	style="@style/MobiumCardViewStyle"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:cardView="http://schemas.android.com/apk/res-auto"
	android:layout_width="@dimen/fragment_start_product_card_size"
	android:layout_height="@dimen/fragment_start_product_card_size"
	android:layout_marginBottom="6dp"
	android:layout_marginLeft="@dimen/fragment_start_product_left_margin"
	android:layout_marginRight="@dimen/fragment_start_product_right_margin"
	android:layout_marginTop="6dp"
	android:background="@drawable/yellow_ripple"
	android:focusableInTouchMode="false"
	cardView:cardBackgroundColor="@android:color/white"
	cardView:cardElevation="2dp">

	<LinearLayout
		android:id="@+id/frame"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center_horizontal"
		android:orientation="vertical">

		<com.mobium.reference.views.WebImageView
			android:id="@+id/image"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_marginTop="2dp"
			android:layout_weight="1"
			android:focusable="false"
			android:focusableInTouchMode="false"
			android:minHeight="50dp"/>

		<TextView
			android:id="@+id/label"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="left"
			android:layout_marginLeft="8dp"
			android:layout_marginRight="8dp"
			android:maxLines="2"
			android:paddingBottom="5dp"
			android:paddingTop="5dp"
			android:text="Товар"
			android:textColor="#000000"
			android:textSize="@dimen/start_fragment_items_list_titles_size"/>

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="5dp"
			android:layout_marginLeft="8dp"
			android:layout_marginRight="8dp"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/cost"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="1dp"
				android:layout_weight="1"
				android:maxLines="2"
				android:text="123р"
				android:textColor="#000000"
				android:textStyle="bold"/>

			<TextView
				android:id="@+id/oldCost"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="1dp"
				android:layout_weight="1.2"
				android:alpha="0.5"
				android:gravity="center_horizontal"
				android:maxLines="2"
				android:text="123р"
				android:textColor="#000000"
				android:textSize="13sp"/>
		</LinearLayout>
	</LinearLayout>
</com.mobium.reference.views.SquareCardView>