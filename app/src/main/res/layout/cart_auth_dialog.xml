<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AlertDialog.AppCompat.Light"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/mobium_main_content_without_container_padding">

    <TextView
        android:id="@+id/rating_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="24dp"
        android:singleLine="true"
        android:text="Пожалуйста, авторизуйтесь"
        android:textColor="@color/dark_gray"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_user_profile"
            android:textColor="@color/product_review_label_good_color" />

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:text="Чтобы упростить оформление заказов необходимо авторизоваться или зарегистрироваться"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_marginLeft="8dp" />

    </LinearLayout>

    <View style="@style/deliver.horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/cart_dialog_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="зарегистрироваться"
            android:textAllCaps="true"
            android:textColor="@color/product_review_label_good_color"
            android:textSize="12sp" />

        <View
            android:layout_width="16dp"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/cart_dialog_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:text="авторизоваться"
            android:textAllCaps="true"
            android:textColor="@color/product_review_label_good_color"
            android:textSize="12sp"
            android:gravity="right" />

    </LinearLayout>

    <View style="@style/deliver.horizontal" />

    <TextView
        android:id="@+id/cart_dialog_proceed"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:paddingTop="16dp"
        android:text="продолжить без регистрации"
        android:textAllCaps="true"
        android:textColor="@color/product_review_label_good_color"
        android:textSize="12sp" />

</LinearLayout>