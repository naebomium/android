<?xml version="1.0" encoding="utf-8"?>


<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/fragment_services_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginRight="8dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/logo"
                        android:minHeight="80dp"
                        android:minWidth="80dp" />

                    <TextView
                        android:id="@+id/fragment_services_title"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/abc_text_size_large_material"
                        android:text="бренд"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/fragment_services_region_title"
                android:layout_width="wrap_content"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:text="регион"
                android:layout_height="wrap_content"
                android:layout_margin="16dp" />

            <LinearLayout
                android:id="@+id/fragment_services_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <Button
                android:id="@+id/fragment_services_button"
                android:layout_margin="12dp"
                android:text="В других городах"
                android:textAllCaps="true"
                android:layout_gravity="center_horizontal"
                style="@style/MobiumButtonWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </ScrollView>

    <include layout="@layout/frame_layout_load_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>

