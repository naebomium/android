<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="@dimen/left_menu_item_height"
             android:background="@drawable/yellow_ripple"
             android:clickable="true"
             android:orientation="horizontal"
	>

	<ImageView
		android:id="@+id/icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_marginLeft="@dimen/mobium_main_content_without_container_padding"
		android:adjustViewBounds="true"
		android:cropToPadding="false"
		android:scaleType="fitCenter"
		android:src="@drawable/support"/>


	<TextView
		android:id="@+id/item_service_single_line_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical"
		android:layout_marginLeft="@dimen/icon_list_item_label_left_margin"
		android:layout_marginRight="50dp"
		android:gravity="bottom"
		android:singleLine="true"
		android:text="Главная страница"
		android:textColor="@android:color/black"
		android:textSize="16sp"/>

	<ImageView
		android:id="@+id/pointer"
		android:layout_width="@dimen/left_menu_item_height"
		android:layout_height="@dimen/left_menu_item_height"
		android:layout_gravity="center_vertical|right"
		android:adjustViewBounds="true"
		android:clickable="false"
		android:cropToPadding="false"
		android:scaleType="center"
		android:src="@drawable/go"/>

	<View
		android:id="@+id/item_service_single_line_deliver"
		style="@style/deliver.horizontal"
		android:layout_gravity="bottom"/>
</FrameLayout>
